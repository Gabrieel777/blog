<%- include("partials/header.ejs") %>
<%- include("partials/homeNavbar.ejs") %>

<body>
    <div class="container">
        <hr>
        <div class="jumbotron">
            <h1 class="display-4" style="text-align: center;">Bem-vindo</h1>
            <p class="lead" style="text-align: center;">Apenas um simples e funcional Blog</p>
            <hr class="my-4">
            <p style="text-align: center;">Blog aonde você pode criar e responder diversos artigos de inúmeras categorias.</p>
        </div>
        <% articles.forEach(article => { %>
            <div class="card">
                <div class="card-header">
                    <h2><%= article.title %></h2>
                </div>
                <div class="card-body">
                    <a class="btn btn-primary" href="/<%= article.slug %>">Ler artigo</a>
                </div>
            </div>
            <br>
        <% }); %>

        <div class="row">
            <div class="col col-12">
                <a style="float: right;" href="/articles/page/2">Próxima</a>
            </div>
        </div>
        <hr>
    </div>
</body>

<%- include("partials/footer.ejs") %>